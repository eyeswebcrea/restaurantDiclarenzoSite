{% extends "::base.html.twig" %}

{% block stylesheets %}
	    {% 
        		stylesheets output='css/animation.css' 
        		'@SiteHomeBundle/Resources/public/css/animation.css'
        		'@SiteHomeBundle/Resources/public/css/jquery.fancybox-1.3.4.css'
        %}        		
        	<link rel="stylesheet" href="{{ asset_url }}" type="text/css" media="screen" />
        {% endstylesheets %}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	    {% 
        		javascripts output='js/animations.js' 
        		'@SiteHomeBundle/Resources/public/js/jquery.fancybox-1.3.4.pack.js'
        %}        		
        	<script src="{{ asset_url }}"></script>
        {% endjavascripts %}
	<script type="text/javascript">
		$(document).ready(function() {
			$("a.imgbox").fancybox({
				'transitionIn'	:	'elastic',
				'transitionOut'	:	'elastic',
				'speedIn'		:	300, 
				'speedOut'		:	200, 
				'overlayShow'	:	true
			});
		});
	</script>
{% endblock %}

{% block body %}

	<div class="animation-list span-22 prepend-1 append-1 last prepend-top append-bottom">
		{% for article in boucleArticles({ "idRubrique" : 50 }) %}
			<div class="animation-item span-10 append-bottom {% if loop.index % 2 != 0 %}append-1{% else %}last{% endif %}">
				<div class="block-srcshot">
					<a href="{{ image(article.getPathAbsoluteLocalLogo()).forceResize(800,600) }}" class="imgbox">
						<img src="{{ image(article.getPathAbsoluteLocalLogo()).resize(400,300) }}">
					</a>
				</div>
			</div>
		{% endfor %}
	</div>
	
{% endblock %}